/* pages/meditation/meditation.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  padding: 40rpx;
}

.meditation-content {
  text-align: center;
  padding-top: 100rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.description {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 80rpx;
  line-height: 1.6;
}

.steps {
  margin-bottom: 80rpx;
}

.step-item {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  background: #667eea;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.step-text {
  font-size: 32rpx;
  color: #333;
}

.timer-section {
  margin-bottom: 60rpx;
}

.timer {
  display: block;
  font-size: 120rpx;
  font-weight: bold;
  color: #667eea;
}

.timer-label {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.action-button {
  width: 80%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 50rpx;
  font-size: 32rpx;
  padding: 30rpx;
}
