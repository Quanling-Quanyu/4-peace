<!--pages/meditation/meditation.wxml-->
<view class="container">
  <view class="meditation-content">
    <text class="title">冥想準備</text>
    <text class="description">請找一個安靜的空間，放鬆身心，準備好抽取您的禪卡</text>
    
    <view class="steps">
      <view class="step-item">
        <text class="step-number">1</text>
        <text class="step-text">深呼吸三次</text>
      </view>
      <view class="step-item">
        <text class="step-number">2</text>
        <text class="step-text">清空思緒</text>
      </view>
      <view class="step-item">
        <text class="step-number">3</text>
        <text class="step-text">專注當下</text>
      </view>
    </view>

    <view class="timer-section">
      <text class="timer">{{countdown}}</text>
      <text class="timer-label">秒</text>
    </view>

    <button class="action-button" bindtap="{{isReady ? 'goToCards' : 'startMeditation'}}">
      {{isReady ? '開始抽牌' : '開始冥想'}}
    </button>
  </view>
</view>
