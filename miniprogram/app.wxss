/* app.wxss - 4-Peace 全局樣式 */

page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  color: #333;
}

/* 容器 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 按鈕通用樣式 */
.btn {
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.btn-secondary {
  background-color: #fff;
  color: #667eea;
  border: 2rpx solid #667eea;
}

/* 牌面通用樣式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
}

/* 文字通用樣式 */
.text-center {
  text-align: center;
}

.text-muted {
  color: #999;
}

.text-primary {
  color: #667eea;
}
